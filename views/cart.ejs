<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Bad Thrifts</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
    <%- include('partials/header') %>
    <%- include('auth/login') %>
    <%- include('auth/registration') %>
    <%- include('partials/profile_modal') %>

    <div class="cart-wrap">
        <div class="cart-header">
            <input type="checkbox" class="select-all"/>
            <span>All Products</span>
        </div>

        <div class="cart-item">
            <input type="checkbox" />
            <div class="product-img"></div>
            <div class="product-info-cart">
                <strong>Product Name</strong>
                <p><em>Brand: Chuchu</em></p>
            </div>
            <div class="unit-price">₱530</div>
            <div class="quantity-selector">
                <button>-</button>
                <span>1</span>
                <button>+</button>
            </div>
            <div class="remove-btn">Remove</div>
        </div>

        <div class="cart-item">
            <input type="checkbox" />
            <div class="product-img"></div>
            <div class="product-info-cart">
                <strong>Product Name</strong>
                <p><em>Brand: Chuchu</em></p>
            </div>
            <div class="unit-price">₱530</div>
            <div class="quantity-selector">
                <button>-</button>
                <span>1</span>
                <button>+</button>
            </div>
            <div class="remove-btn">Remove</div>
        </div>

        <div class="cart-item sold-out">
            <input type="checkbox" class="sold-out-cb" disabled/>
            <div class="product-img"></div>
            <div class="product-info-cart">
                <small class="sold-label">Sold out!</small>
                <strong>Product Name</strong>
                <p><em>Brand: Chuchu</em></p>
            </div>
            <div class="unit-price">₱530</div>
            <div class="quantity-selector">
                <button disabled>-</button>
                <span>0</span>
                <button disabled>+</button>
            </div>
            <div class="remove-btn">Remove</div>
        </div>
    </div>
    <footer>
        <div class="cart-footer">
            <input type="checkbox" class="select-all"/>
            <span>Select All</span>
            <button>Delete</button>
            <button>Remove inactive products</button>
            <div class="cart-total">
                <span>Total (0 item):</span>
                <strong>₱0</strong>
                <button class="checkout-btn">Checkout <i class="fa fa-arrow-right"></i></button>
            </div>
        </div>
    </footer>

    <script src="/js/main_js.js" defer></script>
    <script src="/js/cart.js" defer></script>
</body>
</html>
